<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{article.url}}">
                <img src="{{article.imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{article.url}}">
                    {{article.title}}
                </a>
            </div>
            <div class="details">
                <p>{{article.description}}</p>
                <div class="info">
                    submitted {{article.time}} ago by {{article.author}}
                </div>
                <div class="controls">
                    <ul>
                        {{#if isAuthor}}
                            <li class="action"><a class="editLink" href="#">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#">delete</a></li>
                        {{/if}}
                    </ul>
                </div>

            </div>
        </div>
        <div class="clear"></div>
    </div>

    <div class="post post-content">
        <form id="commentForm" action="#/addComment/:{{article._id}}" method="post">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#if comments}}
        {{#each comments}}
            {{> comment}}
        {{/each}}
    {{else}}
        <div></div>
    <div>
        <h1 style="font-size: 35px;">No comments in database.</h1>
    </div>
    {{/if}}
</section>